# Increase volume
"pulseaudio-ctl up 10; pkill -RTMIN+10 i3blocks"
    XF86AudioRaiseVolume

# Decrease volume
"pulseaudio-ctl down 10; pkill -RTMIN+10 i3blocks"
    XF86AudioLowerVolume

# Mute speakers
"pulseaudio-ctl mute; pkill -RTMIN+10 i3blocks"
    XF86AudioMute

# Mute mic
"pulseaudio-ctl mute-input; pkill -RTMIN+10 i3blocks"
    XF86AudioMicMute

# Increase brightness
"xbacklight -inc 10; pkill -RTMIN+10 i3blocks"
    XF86MonBrightnessUp

# Decrease brightness
"xbacklight -dec 10; pkill -RTMIN+10 i3blocks"
    XF86MonBrightnessDown
